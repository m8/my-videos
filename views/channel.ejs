<!DOCTYPE html>
<html>

<head>
    <% include templates/head.ejs %>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
        <style>
            .form-control {
                margin-bottom: 15px;
            }

            .jumbotron {
                background-image: url("<%= source.authorBanners[1].url %>");
                background-size: cover;
                height: 10%;
            }

            .title {
                text-overflow: ellipsis;
                white-space: nowrap;
                overflow: hidden;
                max-width: 35ch;
            }
        </style>
</head>

<body>

    <% include templates/navbar.ejs %>
        <div class="content-container">
            <div class="container-fluid">


                <div class="jumbotron jumbotron-fluid">
                    <div class="container">
                    </div>
                </div>
                <div class="d-flex">
                    <img src="<%= source.authorThumbnails[1].url %>" alt="Profile Image" class="rounded">
                    <div class="p-2">
                        <h2 style="flex: content;">
                            <%= source.author %>
                        </h2>
                        <h5>
                            <%= source.subscriberText %>
                        </h5>
                    </div>
                </div>

                <div class="row">

                    <% for(var k=0; k < videos.length; k++) { %>

                        <div onclick='changeUrl("<%= videos[k].videoId %>")' class="col-2 flex align-items-stretch">

                            <div class="card mt-2">
                                <img class="card-img-top" src="<%= videos[k].videoThumbnails[0].url %>"
                                    alt="Card image cap">
                                <div class="card-body">
                                    <p class="card-text title">
                                        <%= videos[k].title %>
                                    </p>
                                </div>
                                <div class="card-footer">
                                    <form action="/add-video" method="POST">
                                        <input name="video_url" hidden value='https://www.youtube.com/watch?v=<%= videos[k].videoId %>' >
                                        <input name="video_name" hidden value='<%= videos[k].title %>' >
                                        
                                        <button class="btn btn-success"><i class="fa fa-save"></i> Save Video</button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <% } %>
                </div>


            </div>


        </div>

        <script>
            function changeUrl(it) {
                let lc = `https://www.youtube.com/watch?v=${it}`;
                window.location.href = lc;
            }
        </script>
</body>

</html>