<!DOCTYPE html>
<html>
  <head>
    <% include templates/head.ejs %>
  
  </head>

  <body>
    <% include templates/navbar.ejs %>

    <div class="content-container">

      <div class="container-fluid">

        <h3>Welcome to Channels Page. <i class="fa fa-video"></i></h3>
        <hr>
        Hello, <%= name %> The channels you follow
        <button id="add" class="btn btn-info"><i class="fa fa-plus"></i>Add Channel</button>
        <table class="table table-striped my-4">

          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">URL</th>
              <th scope="col">Since</th>
            </tr>

          </thead>
          <% if (channels) { %>
          <tbody>
            <% for(var i=0; i < channels.length; i++) { %>
              <tr>
                
                <td>
                  <%= channels[i].name %>
                </td>
                
                <td>
                  <a href="<%= channels[i].url %>"><%= channels[i].url %></a> 
                </td>

                <td>
                    <%= new Intl.DateTimeFormat('en-GB', { year: 'numeric', month: 'long', day: '2-digit'}).format(channels[i].since) %>
                  </td>
              </tr>
              <% } %>

          </tbody>
          <% } %>
        </table>
        
      </div>
    </div>
    </body>

    <div class="modal bd-example-modal-lg  fade " id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">

            <div class="modal-body">
              <form method="POST" action="/add-channel">
                <label for="exampleInputEmail1" class="form-label">Name</label>
                <input type="text" class="form-control" name="name" id="exampleInputEmail1">

                <label for="exampleInputEmail1" class="form-label">Channel Url</label>
                <input type="text" class="form-control" name="channel_url" id="exampleInputEmail1">
                
                <button type="submit" class="btn btn-success mt-2">Follow Channel</button>
              </form>
            </div>

          </div>
        </div>
      </div>

    <script>
    
    $('#add').on('click',function(){
      $('#modal').modal('show');
    })


    </script>
</html>
